{
  "expo": {
    "name": "A Startling Message",
    "slug": "astartlingmessage",
    "version": "1.2.4",
    "orientation": "portrait",
    "icon": "./assets/smileavatar.jpg",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/smileavatar.jpg",
      "resizeMode": "contain",
      "backgroundColor": "#0d0d0d"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "FOREGROUND_SERVICE",
        "ACCESS_BACKGROUND_LOCATION",
        "INTERNET"
      ],
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/smileavatar.jpg",
        "backgroundColor": "#0d0d0d"
      },
      "package": "com.ant_volkov.astartlingmessage"
    },
    "web": {
      "favicon": "./assets/smileavatar.jpg"
    },
    "extra": {
      "eas": {
        "projectId": "371ddcf4-bdfe-4970-9359-efc9429f1512"
      }
    },
    "plugins": [
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow A startling message to use your location.",
          "isAndroidBackgroundLocationEnabled": "Allow App to use your location in the background"
        }
      ],
      [
        "expo-font",
        {
          "fonts": ["./assets/fonts/Playwrite.ttf", "./assets/fonts/Pacifico.ttf"]
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/smileWithHand.png",
          "color": "#ffffff",
          "defaultChannel": "default",
          "sounds": ["./assets/chimessaved.mp3"],
          "enableBackgroundRemoteNotifications": false
        }
      ]
    ]
  }
}
